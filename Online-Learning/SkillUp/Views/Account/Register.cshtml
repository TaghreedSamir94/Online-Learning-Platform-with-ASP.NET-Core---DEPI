@using SkillUp.ActionRequests.UserRequest
@model CreateUserActionRequest


@{
    ViewData["Title"] = "Register";
}
<div class="main">
    <!-- sign up form -->
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">sign up</h2>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            <label for="username"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            @Html.TextBoxFor(m => m.UserName, new { placeholder = "your username", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-email"></i></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "your email", type = "email", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="password"><i class="zmdi zmdi-lock"></i></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            @Html.PasswordFor(m => m.Password, new { placeholder = "password", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="confirmpassword"><i class="zmdi zmdi-lock-outline"></i></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "repeat your password", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <div type="radio" name="agree-term" id="agree-term" class="agree-term" value="option2">
                                <span asp-validation-for="TypeOfUser" class="text-danger"></span>
                                @Html.RadioButtonFor(m => m.TypeOfUser, "Student")
                            </div>
                            <label for="agree-term" class="label-agree-term"><span><span></span></span>Student</label>
                        </div>
                        <div class="form-group">
                            <div type="radio" name="agree-term" id="agree-term" class="agree-term" value="option2">
                                <span asp-validation-for="TypeOfUser" class="text-danger"></span>
                                @Html.RadioButtonFor(m => m.TypeOfUser, "Instructor")
                            </div>
                            <label for="agree-term" class="label-agree-term"><span><span></span></span>Instructor</label>
                        </div>

                        <div class="form-group form-button">
                            <input type="submit" name="register" id="register" class="form-submit" value="register" />
                        </div>
                    }
                </div>
                <div class="signup-image">
                    <figure><img src="~/images/signup-image.jpg" alt="sign up image"></figure>
                    <a asp-controller="Account" asp-action="SignIn" class="signup-image-link">I’ve already taken the first step by registering!😉</a>

                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

