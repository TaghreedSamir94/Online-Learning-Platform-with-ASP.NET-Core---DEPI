@using SkillUp.VMs.AccountVMs
@model RegisteredAdminVM

@{
    ViewData["Title"] = "Register as Admin";
}
<h3 class="text-center">@ViewData["Title"]</h3>
<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Signup</h2>
                <form asp-action="RegisterAdmin" method="post" class="register-form" id="register-form">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label asp-for="UserName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="UserName" placeholder=" Enter Your Name" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Email" placeholder="Your Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="ConfirmPassword" placeholder="Repeat your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Department"><i class="zmdi zmdi-account material-icons-name"></i></i></label>
                        <input asp-for="Department" placeholder="Department Name" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>

                    <div class="form-group"
                        <label asp-for="Gender"></label>
                        <select asp-for="Gender">
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/SignAssets/images/signup-image.jpg" alt="sing up image"></figure>
                <a asp-action="Login" asp-controller="Account" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}